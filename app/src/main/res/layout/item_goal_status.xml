<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginHorizontal="8dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Status Dot -->
        <View
            android:id="@+id/statusDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/status_dot"
            android:layout_marginEnd="16dp" />

        <!-- Category Name -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toEndOf="@id/statusDot"
            android:layout_alignParentTop="true" />

        <!-- Spent Amount -->
        <TextView
            android:id="@+id/textSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent: R0"
            android:layout_toEndOf="@id/statusDot"
            android:layout_below="@id/textCategory"
            android:layout_marginTop="4dp" />

        <!-- Goal Range -->
        <TextView
            android:id="@+id/textGoalRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal: R0â€“R0"
            android:layout_toEndOf="@id/statusDot"
            android:layout_below="@id/textSpent"
            android:layout_marginTop="4dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
