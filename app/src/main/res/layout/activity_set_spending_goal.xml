<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Minimum Goal Section -->
        <TextView
            android:id="@+id/textMinGoalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Goal: R0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarMinGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10000"
            android:layout_marginBottom="24dp" />

        <!-- Maximum Goal Section -->
        <TextView
            android:id="@+id/textMaxGoalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Goal: R0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarMaxGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20000"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveGoal"
            android:text="Save Goal"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:minHeight="56dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
