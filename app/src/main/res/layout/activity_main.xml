<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp" />

        <!-- All buttons neatly spaced -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Add Expense"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAddCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Add Category"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSortByTimePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Sort by Time Period"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnResetExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Reset Expenses"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnViewCategoryTotals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="View Category Totals"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnViewGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="View Graph"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnFilterByCategoryAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Filter by Category and Time"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDeleteAllExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Delete All Expenses"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSetSpendingGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Set Spending Goal"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnViewGoalStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="View Goal Status"
                android:background="@color/black"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnToggleDarkMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Toggle Dark Mode"
                android:background="@color/black"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
